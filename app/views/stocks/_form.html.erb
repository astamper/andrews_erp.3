<%= simple_form_for(@stock) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :intitial_quantity %>
    <%= f.input :current_quantity %>
    <%= f.input :status %>
    <%= f.input :purchase_manufacture_date %>
    <%= f.input :expiration_date %>
    <%= f.input :price_per_unit %>
    <%= f.input :supplier %>
    <%= f.input :identifier %>
    <%= f.association :stocktype %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
